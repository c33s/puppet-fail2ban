[<%= @name %>]
enabled = <%= @enabled %>
port = <%= @port %>
filter = <%= @filter %>
logpath = <%= @logpath %>
<% if @protocol -%>protocol = <%= @protocol %>
<% end -%>
<% if @maxretry -%>maxretry = <%= @maxretry %>
<% end -%>
<% if @findtime -%>findtime = <%= @findtime %>
<% end -%>

## start action

<% if @action -%>
<% if @action.is_a?(String) -%>
action = <% @action.each do |line| -%>
        <%= line %>
    <% end -%>
<% elsif @action.is_a?(Array) -%>
action = <%- @action.each do |line| -%>
<%= line.strip %>
    <% end -%>
<% end -%>
<% end -%>

## end action
<% if @banaction -%>banaction = <%= @banaction %>
<% end -%>
<% if @bantime -%>bantime = <%= @bantime %>
<% end -%>
<% if @ignoreip -%>ignoreip = <%= @ignoreip %>
<% end -%>
<% if @backend -%>backend = <%= @backend %>
<% end -%>



<% if @comment.is_a?(Array) -%>
<% @comment.each do |line| -%>
# <%= line %>
<% end -%>
<% elsif @comment.is_a?(String) -%>
<% @comment.each_line do |line| -%>
# <%= line.strip %>
<% end -%>
<% end -%>
